{
	"kind": "StatefulSet",
	"id": "search",
	"image": "liferaycloud/elasticsearch:6.1.4-3.0.3",
	"cpu": 8,
	"memory": 8192,
	"ports": [
		{
			"port": 9300,
			"external": false
		},
		{
			"port": 9200,
			"external": false
		}
	],
	"readinessProbe": {
		"httpGet": {
			"path": "/",
			"port": 9200
		},
		"timeoutSeconds": 1,
		"successThreshold": 3
	},
	"livenessProbe": {
		"httpGet": {
			"path": "/_cluster/health",
			"port": 9200
		},
		"initialDelaySeconds": 300,
		"timeoutSeconds": 5
	},
	"env": {
		"ES_JAVA_OPTS": "-Xms4g -Xmx4g"
	},
	"environments": {
		"infra": {
			"deploy": false
		},
		"prd": {
			"podManagementPolicy":"Parallel"
		}
	}
}